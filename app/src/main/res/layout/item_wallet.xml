<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/background_radius"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/ivWalletImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/wallet_cash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/ivWalletImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemWalletName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_wallet_name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemWalletMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.500.000 VNÄ" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>


